{
  "manifest_version": 3,
  "name": "Instagram DM Navigator",
  "version": "1.0.0",
  "description": "Navigate Instagram DMs with date-based filtering and human-like scrolling patterns",
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  
  "host_permissions": [
    "*://www.instagram.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://www.instagram.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Instagram DM Navigator"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["utils/*"],
      "matches": ["*://www.instagram.com/*"]
    }
  ]
}