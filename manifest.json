{
  "manifest_version": 3,
  "name": "Instagram DM Navigator",
  "version": "1.0",
  "description": "A Chrome extension to navigate Instagram DMs.",
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.instagram.com/"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.instagram.com/direct/*"
      ],
      "js": [
        "content/content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "utils/instagram-detector.js",
        "utils/dom-detector.js"
      ],
      "matches": [
        "https://*.instagram.com/*"
      ]
    }
  ]
}