{
  "manifest_version": 3,
  "name": "Instagram DM Time Scroll",
  "version": "1.0.0",
  "description": "Automatically scroll back 2 months in Instagram DMs with a single click",
  
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  
  "host_permissions": [
    "*://www.instagram.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://www.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Instagram DM Time Scroll"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}